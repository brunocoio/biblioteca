<%- include('includes/head') %>
    <%- include('includes/nav') %>
        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>
                <div class="col-lg-8 my-3">
                    <h1 class="text-center">Login</h1>
                    <p class="text-center lead">Efetue o login ou crie uma conta abaixo</p>

                    <%- include('includes/messages'); %>

                        <div class="row">
                            <div class="col-lg my-5">
                                <h4>Cadastro</h4>
                                <p>Caso não tenha conta, favor efetuar o cadastro abaixo.</p>
                                <form action="/login/register" method="POST" class="form-cadastro">
                                    <div class="mb-3">
                                        <label for="CadastroEmail" class="form-label">Email</label>
                                        <input type="email" name="email" class="form-control" id="CadastroEmail">
                                    </div>
                                    <div class="mb-3">
                                        <label for="CadastroSenha" class="form-label">Senha</label>
                                        <input type="password" name="password" class="form-control" id="CadastroSenha">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Criar minha conta</button>
                                    <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                </form>
                            </div>

                            <div class="col-lg my-5">
                                <h4>login</h4>
                                <p>Efetue o login se já tiver uma conta cadastrada.</p>
                                <form action="/login/login" method="POST" class="form-login">
                                    <div class="mb-3">
                                        <label for="LoginEmail" class="form-label">Email</label>
                                        <input type="email" name="email" class="form-control" id="LoginEmail">
                                    </div>
                                    <div class="mb-3">
                                        <label for="LoginSenha" class="form-label">Senha</label>
                                        <input type="password" name="password" class="form-control" id="LoginSenha">
                                    </div>
                                    <button type="submit" class="btn btn-primary">Acessar</button>
                                    <input type="hidden" name="_csrf" value=<%=csrfToken %>>
                                </form>
                            </div>
                        </div>

                </div>
                <div class="col-lg-2"></div>
            </div>
        </div>
        <%- include('includes/footer') %>